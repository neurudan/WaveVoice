{
    "TRAINING": {
        "num_epochs":           10000,
        "steps_per_epoch":      100,

        "setting":              "hyperepochs"
    },


    "MODEL": {
        "dilation_base":        3,
        "dilation_depth":       8,

        "filter_size":          3,
        "num_filters":          64,
        "embedding_size":       128,

        "causal":               false,
        "reverse":              false,


        "residual_block":       "resblock_orig",
        "connection_block":     "skip",
        "output_block":         "output_dense",

        "loss":                 "angular_margin",

        "res_drop_rate":        0.2,
        "skip_drop_rate":       0.2,
        "embedding_drop_rate":  0.2
    },



    "SIM_MODEL": {
        "filter_size":          32,
        "method":               "add",
        "num_epochs":           100
    },
    

    "DATASET": {
        "base":                 "timit",
        "speaker_list":         "timit_speakers_100_50w_50m_not_reynolds.txt",
        
        "base_test":            "vox1",
        "test_list":            "voxceleb1_veri_test.txt",
        "test_single":          false,

        "condition":            "none",
        "label":                "speaker",

        "data_type":            "original",
        "batch_type":           "real",

        "val_active":           true,
        "val_part":             "before",
        "val_set":              0.2,

        "queue_size":           50,
        "batch_size":           10
    },


    "OPTIMIZER": {
        "type":                 "adam",
        "lr":                   3e-4
    },


    "HYPEREPOCH": {
        "num_speakers":         50,
        "pretrain_epochs":      500,
        "num_hyperepochs":      1000
    },

    
    "ANGULAR_LOSS": {
        "margin_cosface":       0.0,
        "margin_arcface":       0.0,
        "margin_sphereface":    1.0,
        "scale":                10.0
    }
}