{
    "TRAINING": {
        "num_epochs":       10000,
        "steps_per_epoch":  100
    },

    "MODEL": {
        "dilation_base":    2,
        "dilation_depth":   5,

        "filter_size":      2,
        "num_filters":      128,

        "causal":           true,

        "residual_block":   "resblock_orig",
        "connection_block": "skip",
        "output_block":     "output_dense",

        "loss":             "angular_margin",

        "res_drop_rate":    0.1,
        "skip_drop_rate":   0.1,
        "dense_drop_rate":  0.1
    },

    "DATASET": {
        "base":             "timit",
        "speaker_list":     "timit_speakers_100_50w_50m_not_reynolds.txt",

        "condition":        "none",
        "label":            "speaker",

        "data_type":        "mel",
        "batch_type":       "real",
        "val_set":          0.2,
        "queue_size":       50,
        "batch_size":       100
    },

    "OPTIMIZER": {
        "type":             "adam",
        "lr":               3e-4
    },

    "OUTPUT_DENSE": {
        "select_middle":    false,
        "num_filters":      [128]
    },

    "OUTPUT_CONV_ORIG": {
        "select_middle":    false,
        "filter_size":      [1, 1]
    },

    "OUTPUT_CONV_DOWN": {
        "filter_size":      [9, 9, 9, 9]
    },

    "OUTPUT_POOL_DOWN": {
        "down_factor":      [9, 9, 9, 9],
        "filter_size":      [1, 1, 1, 1]
    },

    "ANGULAR_LOSS": {
        "margin_cosface":   0.9,
        "margin_arcface":   0.0,
        "margin_sphereface":1.0,
        "scale":            10.0
    }
}